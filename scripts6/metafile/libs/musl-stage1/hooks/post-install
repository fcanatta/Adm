#!/usr/bin/env bash
# musl-stage1: post-install â€” limpeza leve e determinismo.
set -Eeuo pipefail
: "${ADM_DESTDIR:?}"

rm -rf "${ADM_DESTDIR}/usr/share/man" "${ADM_DESTDIR}/usr/share/doc" "${ADM_DESTDIR}/usr/share/info" 2>/dev/null || true

if [ -n "${SOURCE_DATE_EPOCH:-}" ]; then
  find "${ADM_DESTDIR}" -type f -exec touch -h -d @"${SOURCE_DATE_EPOCH}" {} + 2>/dev/null || true
fi
