#!/usr/bin/env bash
# linux-headers-stage0: post-install
# Objetivo: limpeza e determinismo
set -Eeuo pipefail
: "${ADM_DESTDIR:?}"

# Normalizar timestamps para reprodutibilidade
if [ -n "${SOURCE_DATE_EPOCH:-}" ]; then
  find "${ADM_DESTDIR}/usr/include" -type f -exec touch -h -d @"${SOURCE_DATE_EPOCH}" {} + 2>/dev/null || true
fi
