#!/usr/bin/env bash
# hook-pre-configure para toolchain/gawk-temp (LFS 6.9 + ADM 2.0)
#
# LFS 12.4:
#   sed -i 's/extras//' Makefile.in
#   ./configure --prefix=/usr   \
#               --host=$LFS_TGT \
#               --build=$(build-aux/config.guess)
#
# O adm-build normalmente faz:
#   ./configure --prefix=/usr
#
# Aqui:
#   - aplicamos o sed no Makefile.in
#   - transformamos ./configure em wrapper que injeta prefix/host/build
#   - removemos dos args quaisquer opções conflitantes.

set -o errexit
set -o nounset
set -o pipefail

: "${ADM_PKG_ID:=toolchain/gawk-temp}"
: "${ADM_BUILD_DIR_CURRENT:?ADM_BUILD_DIR_CURRENT não definido}"
: "${ADM_DESTDIR:?ADM_DESTDIR não definido}"

pkg_id="$ADM_PKG_ID"
build_dir="$ADM_BUILD_DIR_CURRENT"

cd "$build_dir"

# ===============================
# 1) sed -i 's/extras//' Makefile.in
# ===============================
if [[ -f "Makefile.in" ]]; then
    # Só aplica uma vez; se já não tiver "extras", não faz nada.
    if grep -q "extras" Makefile.in; then
        echo "[hook-pre-configure][$pkg_id] Aplicando sed 's/extras//' em Makefile.in..." >&2
        sed -i 's/extras//' Makefile.in
    else
        echo "[hook-pre-configure][$pkg_id] Makefile.in já sem 'extras'; sed não necessário." >&2
    fi
else
    echo "[hook-pre-configure][$pkg_id] AVISO: Makefile.in não encontrado; pulando sed." >&2
fi

# ===============================
# 2) Wrapper para ./configure
# ===============================

if [[ ! -x "./configure" ]]; then
    echo "[hook-pre-configure][$pkg_id] ./configure não encontrado em $build_dir; nada a fazer." >&2
    exit 0
fi

# Evita recriar se já existe configure.orig
if [[ -x "./configure.orig" ]]; then
    echo "[hook-pre-configure][$pkg_id] Wrapper de configure já existe; pulando recriação." >&2
    exit 0
fi

mv ./configure ./configure.orig

cat > ./configure << 'EOF'
#!/usr/bin/env bash
# Wrapper de ./configure para Gawk temporário (LFS 6.9 / ADM 2.0)
set -o errexit
set -o nounset
set -o pipefail

pkg_id="${ADM_PKG_ID:-toolchain/gawk-temp}"
build_dir="$(pwd)"

# ===== Determinar HOST =====
# Prioridade:
#   1) LFS_TGT
#   2) ADM_CROSS_TARGET
#   3) gcc -dumpmachine
#   4) build-aux/config.guess (fallback)
host="${LFS_TGT:-${ADM_CROSS_TARGET:-}}"

if [[ -z "$host" ]]; then
    if command -v gcc >/dev/null 2>&1; then
        host="$(gcc -dumpmachine 2>/dev/null || true)"
    fi
fi

if [[ -z "$host" ]]; then
    if [[ -x "$build_dir/build-aux/config.guess" ]]; then
        host="$("$build_dir/build-aux/config.guess")"
    else
        printf 'ADM-ERROR[%s]: não consegui determinar HOST (LFS_TGT/ADM_CROSS_TARGET/gcc/config.guess).\n' \
            "$pkg_id" >&2
        exit 1
    fi
fi

# ===== Determinar BUILD =====
if [[ -x "$build_dir/build-aux/config.guess" ]]; then
    build="$("$build_dir/build-aux/config.guess")"
else
    if command -v gcc >/dev/null 2>&1; then
        build="$(gcc -dumpmachine 2>/dev/null || echo "$host")"
    else
        build="$host"
    fi
fi

# ===== Filtrar args vindos do adm-build =====
filtered_args=()
for a in "$@"; do
    case "$a" in
        --prefix=*|--host=*|--build=*)
            # Ignora: vamos forçar os nossos valores
            ;;
        *)
            filtered_args+=("$a")
            ;;
    esac
done

real_conf="./configure.orig"
if [[ ! -x "$real_conf" ]]; then
    printf 'ADM-ERROR[%s]: configure.orig não encontrado em %s\n' "$pkg_id" "$build_dir" >&2
    exit 1
fi

# ===== Montar comando final, alinhado com o LFS =====
args=(
  "$real_conf"
  "--prefix=/usr"
  "--host=${host}"
  "--build=${build}"
)

if [[ ${#filtered_args[@]} -gt 0 ]]; then
    args+=("${filtered_args[@]}")
fi

printf 'ADM-INFO[%s]: chamando configure real: %s\n' "$pkg_id" "${args[*]}" >&2
exec "${args[@]}"
EOF

chmod +x ./configure

echo "[hook-pre-configure][$pkg_id] Wrapper ./configure criado para Gawk-5.3.2 (cross LFS/ADM 2.0)." >&2
