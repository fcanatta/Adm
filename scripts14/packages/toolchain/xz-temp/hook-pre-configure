#!/usr/bin/env bash
# hook-pre-configure para toolchain/xz-temp (LFS 6.16 + ADM 2.0)
#
# LFS:
#   ./configure --prefix=/usr                     \
#               --host=$LFS_TGT                   \
#               --build=$(build-aux/config.guess) \
#               --disable-static                  \
#               --docdir=/usr/share/doc/xz-5.8.1
#
# adm-build:
#   ./configure --prefix=/usr
#
# Aqui viramos ./configure em wrapper que injeta tudo isso e
# ignora opções conflitantes vindas do adm-build.

set -o errexit
set -o nounset
set -o pipefail

: "${ADM_PKG_ID:=toolchain/xz-temp}"
: "${ADM_BUILD_DIR_CURRENT:?ADM_BUILD_DIR_CURRENT não definido}"
: "${ADM_DESTDIR:?ADM_DESTDIR não definido}"

pkg_id="$ADM_PKG_ID"
build_dir="$ADM_BUILD_DIR_CURRENT"

cd "$build_dir"

if [[ ! -x "./configure" ]]; then
    echo "[hook-pre-configure][$pkg_id] ./configure não encontrado em $build_dir; nada a fazer." >&2
    exit 0
fi

# evita recriar se já existir wrapper
if [[ -x "./configure.orig" ]]; then
    echo "[hook-pre-configure][$pkg_id] Wrapper de configure já existe; pulando." >&2
    exit 0
fi

mv ./configure ./configure.orig

cat > ./configure << 'EOF'
#!/usr/bin/env bash
# Wrapper de ./configure para Xz temporário (LFS 6.16 / ADM 2.0)
set -o errexit
set -o nounset
set -o pipefail

pkg_id="${ADM_PKG_ID:-toolchain/xz-temp}"
build_dir="$(pwd)"

# ===== Determinar HOST =====
# ordem:
#   1) LFS_TGT
#   2) ADM_CROSS_TARGET
#   3) gcc -dumpmachine
#   4) build-aux/config.guess
host="${LFS_TGT:-${ADM_CROSS_TARGET:-}}"

if [[ -z "$host" ]]; then
    if command -v gcc >/dev/null 2>&1; then
        host="$(gcc -dumpmachine 2>/dev/null || true)"
    fi
fi

if [[ -z "$host" ]]; then
    if [[ -x "$build_dir/build-aux/config.guess" ]]; then
        host="$("$build_dir/build-aux/config.guess")"
    else
        printf 'ADM-ERROR[%s]: não consegui determinar HOST (LFS_TGT/ADM_CROSS_TARGET/gcc/config.guess).\n' \
            "$pkg_id" >&2
        exit 1
    fi
fi

# ===== Determinar BUILD =====
if [[ -x "$build_dir/build-aux/config.guess" ]]; then
    build="$("$build_dir/build-aux/config.guess")"
else
    if command -v gcc >/dev/null 2>&1; then
        build="$(gcc -dumpmachine 2>/dev/null || echo "$host")"
    else
        build="$host"
    fi
fi

# ===== Filtrar args vindos do adm-build =====
filtered_args=()
for a in "$@"; do
    case "$a" in
        --prefix=*|--host=*|--build=*|--disable-static|--enable-static|--docdir=*)
            # vamos sobrescrever esses
            ;;
        *)
            filtered_args+=("$a")
            ;;
    esac
done

real_conf="./configure.orig"
if [[ ! -x "$real_conf" ]]; then
    printf 'ADM-ERROR[%s]: configure.orig não encontrado em %s\n' "$pkg_id" "$build_dir" >&2
    exit 1
fi

# ===== Montar comando final alinhado com LFS =====
args=(
  "$real_conf"
  "--prefix=/usr"
  "--host=${host}"
  "--build=${build}"
  "--disable-static"
  "--docdir=/usr/share/doc/xz-5.8.1"
)

if [[ ${#filtered_args[@]} -gt 0 ]]; then
    args+=("${filtered_args[@]}")
fi

printf 'ADM-INFO[%s]: chamando configure real: %s\n' "$pkg_id" "${args[*]}" >&2
exec "${args[@]}"
EOF

chmod +x ./configure

echo "[hook-pre-configure][$pkg_id] Wrapper ./configure criado para Xz-5.8.1 (cross LFS/ADM 2.0)." >&2
