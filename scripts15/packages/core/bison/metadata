# /usr/src/packages/core/bison/metadata

name="bison"
category="core"
version="3.8.2"
release="1"

# Fonte oficial (GNU Bison)
sources=(
  "https://ftp.gnu.org/gnu/bison/bison-${version}.tar.xz"
)

# Dependências (Installation depends on) — conforme Appendix C para bison
depends=(
  "bash"
  "binutils"
  "coreutils"
  "diffutils"
  "flex"
  "gcc"
  "gettext"
  "glibc"
  "m4"
  "make"
  "sed"
  "texinfo"
)

# SHA256 real do bison-3.8.2.tar.xz
sha256sums=(
  "https___ftp.gnu.org_gnu_bison_bison-3.8.2.tar.xz=9bba0214ccf7f1079c5d59210045227bcf619519840ebfa80cd3849cff5a5bf2"
)

# Função para detectar versão mais recente upstream
upstream_latest_version() {
  local url="https://ftp.gnu.org/gnu/bison/"
  local html
  if command -v curl >/dev/null 2>&1; then
    html="$(curl -fsSL "$url")" || return 1
  else
    html="$(wget -qO- "$url")" || return 1
  fi

  printf '%s\n' "$html" \
    | sed -n 's/.*bison-\([0-9][0-9.]*\)\.tar\.\(xz\|gz\).*/\1/p' \
    | sort -V | tail -n1
}

# BUILD REAL – Bison-3.8.2 (LFS 8.34)
build() {
  : "${DESTDIR:=/}"

  local sdir
  sdir="$(find . -mindepth 1 -maxdepth 1 -type d -name "bison-${version}" | head -n1)"
  if [ -z "$sdir" ]; then
    echo "Diretório bison-${version} não encontrado" >&2
    return 1
  fi

  cd "$sdir"

  ###################################
  # Configuração (igual ao livro)
  ###################################
  ./configure --prefix=/usr \
              --docdir=/usr/share/doc/bison-${version}

  ###################################
  # Compilação
  ###################################
  make

  ###################################
  # Testes (opcional)
  ###################################
  make check

  ###################################
  # Instalação em DESTDIR
  ###################################
  make DESTDIR="${DESTDIR}" install
}
