#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'

if ! declare -F adm_info >/dev/null 2>&1; then
  _ts_cmm10(){ date +"%Y-%m-%d %H:%M:%S"; }
  adm_info(){ printf '[%s] [INFO] %s\n' "$(_ts_cmm10)" "$*" >&2; }
fi

cmm10_root() {
  [ -n "${ADM_INSTALL_ROOT:-}" ] && printf '%s' "$ADM_INSTALL_ROOT" ||
  [ -n "${DESTDIR:-}" ]          && printf '%s' "$DESTDIR"          ||
  printf '/'
}

cmm10_cxxflags() {
  local f="-O2 -fPIC"
  [ "${ADM_PROFILE:-normal}" = "aggressive" ] && f="-O3 -fPIC -march=native -mtune=native -flto"
  printf '%s\n' "$f"
}

adm_hook_pre_build() {
  export ADM_SKIP_DEFAULT_BUILD=1
  adm_info "libcairomm-1.0: usando autotools com CXXFLAGS tunado."
}

adm_hook_build() {
  CXXFLAGS="$(cmm10_cxxflags)" ./configure --prefix=/usr --disable-static
  make -j"$(nproc)"
}

adm_hook_install() {
  make DESTDIR="$(cmm10_root)" install
}

adm_hook_post_install() {
  adm_info "libcairomm-1.0: instalado e pronto para apps antigos."
}
