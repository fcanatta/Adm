#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'

gtkmm3_root() {
  [ -n "${ADM_INSTALL_ROOT:-}" ] && printf '%s' "$ADM_INSTALL_ROOT" ||
  [ -n "${DESTDIR:-}" ]          && printf '%s' "$DESTDIR"          ||
  printf '/'
}

gtkmm3_cxxflags() {
  local f="-O2 -fPIC"
  [ "${ADM_PROFILE:-normal}" = "aggressive" ] && f="-O3 -fPIC -march=native -mtune=native -flto"
  printf '%s\n' "$f"
}

adm_hook_pre_build() { export ADM_SKIP_DEFAULT_BUILD=1; }

adm_hook_build() {
  rm -rf build
  CXXFLAGS="$(gtkmm3_cxxflags)" \
  meson setup build \
      --prefix=/usr \
      --buildtype=release \
      -Ddefault_library=shared \
      -Ddocumentation=false
  ninja -C build -j"$(nproc)"
}

adm_hook_install() {
  ninja -C build install DESTDIR="$(gtkmm3_root)"
}

adm_hook_post_install() { :; }
