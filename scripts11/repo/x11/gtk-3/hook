#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'

if ! declare -F adm_info >/dev/null 2>&1; then
  _ts_g3(){ date +"%Y-%m-%d %H:%M:%S"; }
  adm_info(){ printf '[%s] [INFO] %s\n' "$(_ts_g3)" "$*" >&2; }
fi

g3_root() {
  [ -n "${ADM_INSTALL_ROOT:-}" ] && printf '%s' "$ADM_INSTALL_ROOT" ||
  [ -n "${DESTDIR:-}" ]          && printf '%s' "$DESTDIR"          ||
  printf '/'
}

g3_cflags() {
  local f="-O2 -fPIC"
  [ "${ADM_PROFILE:-normal}" = "aggressive" ] && f="-O3 -fPIC -march=native -mtune=native -flto"
  printf '%s\n' "$f"
}

adm_hook_pre_build() { export ADM_SKIP_DEFAULT_BUILD=1; }

adm_hook_build() {
  rm -rf build
  CFLAGS="$(g3_cflags)" meson setup build \
      --prefix=/usr \
      --buildtype=release \
      -Dbuild-tests=false \
      -Dbuild-examples=false \
      -Dintrospection=true \
      -Dwayland-backend=true \
      -Dx11-backend=true \
      -Dbroadway-backend=false

  ninja -C build -j"$(nproc)"
}

adm_hook_install() {
  ninja -C build install DESTDIR="$(g3_root)"
}

adm_hook_post_install() {
  adm_info "gtk-3: instalado com backends X11+Wayland."
}
