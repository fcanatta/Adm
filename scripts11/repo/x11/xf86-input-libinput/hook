#!/usr/bin/env bash
# Hook avançado para x11/xf86-input-libinput
# - Controla configure/make/make install
# - Cria 30-libinput-tuning.conf com ajustes de touchpad/mouse
# - Tunáveis via variáveis de ambiente ADM_LIBINPUT_*

set -euo pipefail
IFS=$'\n\t'

if ! declare -F adm_info >/dev/null 2>&1; then
  _ts_li() { date +"%Y-%m-%d %H:%M:%S"; }
  adm_info()  { printf '[%s] [INFO] %s\n'  "$(_ts_li)" "$*" >&2; }
  adm_warn()  { printf '[%s] [WARN] %s\n'  "$(_ts_li)" "$*" >&2; }
  adm_error() { printf '[%s] [ERRO] %s\n'  "$(_ts_li)" "$*" >&2; }
  adm_die()   { adm_error "$*"; exit 1; }
fi

li_jobs() { nproc 2>/dev/null || echo 1; }

li_install_root() {
  if [ -n "${ADM_INSTALL_ROOT:-}" ]; then
    printf '%s\n' "$ADM_INSTALL_ROOT"
  elif [ -n "${DESTDIR:-}" ]; then
    printf '%s\n' "$DESTDIR"
  else
    printf '/\n'
  fi
}

li_require_root_if_needed() {
  local root="$1"
  if [ "$root" = "/" ] && [ "$(id -u)" -ne 0 ]; then
    adm_die "x11/xf86-input-libinput: instalar diretamente em '/' requer root."
  fi
}

li_detect_srctree() {
  if [ -n "${ADM_LIBINPUT_XF86_SRCDIR:-}" ] && [ -f "$ADM_LIBINPUT_XF86_SRCDIR/configure" ]; then
    printf '%s\n' "$ADM_LIBINPUT_XF86_SRCDIR"; return 0
  fi
  if [ -f "configure" ] && [ -f "src/libinput.c" ] 2>/dev/null; then
    printf '%s\n' "$PWD"; return 0
  fi
  local d
  for d in "$PWD"/xf86-input-libinput-* "$PWD"/*; do
    [ -d "$d" ] || continue
    if [ -f "$d/configure" ]; then
      printf '%s\n' "$d"; return 0
    fi
  done
  adm_die "x11/xf86-input-libinput: não foi possível detectar diretório de fonte."
}

li_backup_if_exists() {
  local path="$1"
  if [ -f "$path" ]; then
    local backup="${path}.adm-backup-$(date +%Y%m%d%H%M%S)"
    adm_warn "x11/xf86-input-libinput: '$path' já existe; backup em '$backup'."
    cp -f "$path" "$backup"
  fi
}

li_init_tuning_conf() {
  local root="$1"
  local xdir="$root/etc/X11/xorg.conf.d"
  local conf="$xdir/30-libinput-tuning.conf"

  mkdir -p "$xdir"
  li_backup_if_exists "$conf"

  # defaults inteligentes, mas controláveis
  local tap="${ADM_LIBINPUT_TAP_DEFAULT:-1}"
  local natural="${ADM_LIBINPUT_NATURAL_SCROLL:-1}"
  local dwt="${ADM_LIBINPUT_DISABLE_WHILE_TYPING:-1}"

  adm_info "x11/xf86-input-libinput: criando '$conf' (tap=$tap, natural=$natural, disable-while-typing=$dwt)."

  cat >"$conf" <<EOF
Section "InputClass"
    Identifier "libinput touchpad tuning"
    MatchIsTouchpad "on"
    MatchDevicePath "/dev/input/event*"
    Driver "libinput"
    Option "Tapping" "${tap}"
    Option "NaturalScrolling" "${natural}"
    Option "DisableWhileTyping" "${dwt}"
EndSection

Section "InputClass"
    Identifier "libinput mouse tuning"
    MatchIsPointer "on"
    MatchDevicePath "/dev/input/event*"
    Driver "libinput"
    # Exemplo: aceleração padrão (0.0 neutro)
    Option "AccelSpeed" "0.0"
EndSection
EOF
}

adm_hook_pre_build() {
  export ADM_SKIP_DEFAULT_BUILD=1
  adm_info "x11/xf86-input-libinput: build padrão desativado; usando hook."
}

adm_hook_build() {
  local src jobs
  src="$(li_detect_srctree)"
  jobs="$(li_jobs)"

  adm_info "x11/xf86-input-libinput: src=$src jobs=$jobs"

  (
    cd "$src"
    ./configure --prefix=/usr --sysconfdir=/etc
    make -j"$jobs"
  )
}

adm_hook_install() {
  local src root
  src="$(li_detect_srctree)"
  root="$(li_install_root)"

  li_require_root_if_needed "$root"

  adm_info "x11/xf86-input-libinput: instalando em '$root'..."
  (
    cd "$src"
    make install DESTDIR="$root"
  )

  li_init_tuning_conf "$root"

  adm_info "x11/xf86-input-libinput: instalação concluída."
}

adm_hook_post_install() {
  adm_info "x11/xf86-input-libinput: post-install – ajuste 30-libinput-tuning.conf se quiser um perfil diferente."
}
