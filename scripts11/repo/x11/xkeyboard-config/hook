#!/usr/bin/env bash
set -euo pipefail

root() {
  [ -n "${ADM_INSTALL_ROOT:-}" ] && printf '%s\n' "$ADM_INSTALL_ROOT" ||
  [ -n "${DESTDIR:-}" ]          && printf '%s\n' "$DESTDIR" ||
  printf '/'
}

adm_hook_post_install() {
  local r; r="$(root)"
  adm_info "Recriando banco de teclados X11..."
  [ -x "$r/usr/bin/setxkbmap" ] && chroot "$r" setxkbmap -query >/dev/null 2>&1 || true
}
