#!/usr/bin/env bash
# Hook avançado para x11/xf86-video-intel
# - Controla configure/make/make install
# - Cria 20-intel.conf com TearFree/AccelMethod/DRI
# - Tunáveis via ADM_INTEL_* (Accel, TearFree, DRI)

set -euo pipefail
IFS=$'\n\t'

if ! declare -F adm_info >/dev/null 2>&1; then
  _ts_vi() { date +"%Y-%m-%d %H:%M:%S"; }
  adm_info()  { printf '[%s] [INFO] %s\n'  "$(_ts_vi)" "$*" >&2; }
  adm_warn()  { printf '[%s] [WARN] %s\n'  "$(_ts_vi)" "$*" >&2; }
  adm_error() { printf '[%s] [ERRO] %s\n'  "$(_ts_vi)" "$*" >&2; }
  adm_die()   { adm_error "$*"; exit 1; }
fi

vi_jobs() { nproc 2>/dev/null || echo 1; }

vi_install_root() {
  if [ -n "${ADM_INSTALL_ROOT:-}" ]; then
    printf '%s\n' "$ADM_INSTALL_ROOT"
  elif [ -n "${DESTDIR:-}" ]; then
    printf '%s\n' "$DESTDIR"
  else
    printf '/\n'
  fi
}

vi_require_root_if_needed() {
  local root="$1"
  if [ "$root" = "/" ] && [ "$(id -u)" -ne 0 ]; then
    adm_die "x11/xf86-video-intel: instalar diretamente em '/' requer root."
  fi
}

vi_detect_srctree() {
  if [ -n "${ADM_INTEL_XF86_SRCDIR:-}" ] && [ -f "$ADM_INTEL_XF86_SRCDIR/configure" ]; then
    printf '%s\n' "$ADM_INTEL_XF86_SRCDIR"; return 0
  fi
  if [ -f "configure" ] && ls src/*.c >/dev/null 2>&1; then
    printf '%s\n' "$PWD"; return 0
  fi
  local d
  for d in "$PWD"/xf86-video-intel-* "$PWD"/*; do
    [ -d "$d" ] || continue
    if [ -f "$d/configure" ]; then
      printf '%s\n' "$d"; return 0
    fi
  done
  adm_die "x11/xf86-video-intel: não foi possível detectar diretório de fonte."
}

vi_backup_if_exists() {
  local path="$1"
  if [ -f "$path" ]; then
    local backup="${path}.adm-backup-$(date +%Y%m%d%H%M%S)"
    adm_warn "x11/xf86-video-intel: '$path' já existe; backup em '$backup'."
    cp -f "$path" "$backup"
  fi
}

vi_init_intel_conf() {
  local root="$1"
  local xdir="$root/etc/X11/xorg.conf.d"
  local conf="$xdir/20-intel.conf"

  mkdir -p "$xdir"
  vi_backup_if_exists "$conf"

  local accel="${ADM_INTEL_ACCEL_METHOD:-sna}"
  local tear="${ADM_INTEL_TEARFREE:-1}"
  local dri="${ADM_INTEL_DRI_LEVEL:-3}"

  adm_info "x11/xf86-video-intel: criando '$conf' (Accel=$accel, TearFree=$tear, DRI=$dri)."

  cat >"$conf" <<EOF
Section "Device"
    Identifier "Intel Graphics"
    Driver "intel"
    Option "AccelMethod" "${accel}"
    Option "TearFree" "${tear}"
    Option "DRI" "${dri}"
EndSection
EOF
}

adm_hook_pre_build() {
  export ADM_SKIP_DEFAULT_BUILD=1
  adm_info "x11/xf86-video-intel: build padrão desativado; usando hook."
}

adm_hook_build() {
  local src jobs
  src="$(vi_detect_srctree)"
  jobs="$(vi_jobs)"

  adm_info "x11/xf86-video-intel: src=$src jobs=$jobs"

  (
    cd "$src"
    ./configure --prefix=/usr --sysconfdir=/etc
    make -j"$jobs"
  )
}

adm_hook_install() {
  local src root
  src="$(vi_detect_srctree)"
  root="$(vi_install_root)"

  vi_require_root_if_needed "$root"

  adm_info "x11/xf86-video-intel: instalando em '$root'..."
  (
    cd "$src"
    make install DESTDIR="$root"
  )

  vi_init_intel_conf "$root"

  adm_info "x11/xf86-video-intel: instalação concluída."
}

adm_hook_post_install() {
  adm_info "x11/xf86-video-intel: post-install – 20-intel.conf criado; ajuste Accel/TearFree/DRI se necessário."
}
