#!/usr/bin/env bash
# Hook avançado para sys/procps-ng
# - configure com opções sensatas
# - make + make install respeitando root/DESTDIR

set -euo pipefail
IFS=$'\n\t'

if ! declare -F adm_info >/dev/null 2>&1; then
  _ts_pp() { date +"%Y-%m-%d %H:%M:%S"; }
  adm_info()  { printf '[%s] [INFO] %s\n'  "$(_ts_pp)" "$*" >&2; }
  adm_warn()  { printf '[%s] [WARN] %s\n'  "$(_ts_pp)" "$*" >&2; }
  adm_error() { printf '[%s] [ERRO] %s\n'  "$(_ts_pp)" "$*" >&2; }
  adm_die()   { adm_error "$*"; exit 1; }
fi

pp_jobs() { nproc 2>/dev/null || echo 1; }

pp_install_root() {
  if [ -n "${ADM_INSTALL_ROOT:-}" ]; then
    printf '%s\n' "$ADM_INSTALL_ROOT"
  elif [ -n "${DESTDIR:-}" ]; then
    printf '%s\n' "$DESTDIR"
  else
    printf '/\n'
  fi
}

pp_require_root_if_needed() {
  local root="$1"
  if [ "$root" = "/" ] && [ "$(id -u)" -ne 0 ]; then
    adm_die "sys/procps-ng: instalar em '/' requer root."
  fi
}

pp_detect_srctree() {
  if [ -n "${ADM_PROCPS_SRCDIR:-}" ] && [ -f "$ADM_PROCPS_SRCDIR/configure" ]; then
    printf '%s\n' "$ADM_PROCPS_SRCDIR"; return 0
  fi
  if [ -f "configure" ] && [ -f "src/ps/display.c" ] 2>/dev/null; then
    printf '%s\n' "$PWD"; return 0
  fi
  local d
  for d in "$PWD"/procps-* "$PWD"/*; do
    [ -d "$d" ] || continue
    if [ -f "$d/configure" ] && [ -d "$d/src" ]; then
      printf '%s\n' "$d"; return 0
    fi
  done
  adm_die "sys/procps-ng: não encontrei diretório de fonte."
}

adm_hook_pre_build() {
  export ADM_SKIP_DEFAULT_BUILD=1
  adm_info "sys/procps-ng: build padrão desativado; usando hook."
}

adm_hook_build() {
  local src jobs
  src="$(pp_detect_srctree)"
  jobs="$(pp_jobs)"

  adm_info "sys/procps-ng: src=$src jobs=$jobs"

  (
    cd "$src"
    ./configure \
      --prefix=/usr \
      --sysconfdir=/etc \
      --disable-static
    make -j"$jobs"
  )
}

adm_hook_install() {
  local src root
  src="$(pp_detect_srctree)"
  root="$(pp_install_root)"

  pp_require_root_if_needed "$root"

  adm_info "sys/procps-ng: instalando em '$root'..."
  (
    cd "$src"
    make install DESTDIR="$root"
  )

  adm_info "sys/procps-ng: instalação concluída."
}

adm_hook_post_install() {
  adm_info "sys/procps-ng: post-install – ps, top, free, vmstat, sysctl etc. já disponíveis."
}
