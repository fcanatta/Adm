#!/usr/bin/env bash
# Hook avançado para sys/iptables
# - Controla configure/make/make install
# - Cria skeleton de regras em /etc/iptables/adm.rules se não existir
# - Nunca sobrescreve regras existentes sem backup

set -euo pipefail
IFS=$'\n\t'

if ! declare -F adm_info >/dev/null 2>&1; then
  _ts_ip() { date +"%Y-%m-%d %H:%M:%S"; }
  adm_info()  { printf '[%s] [INFO] %s\n'  "$(_ts_ip)" "$*" >&2; }
  adm_warn()  { printf '[%s] [WARN] %s\n'  "$(_ts_ip)" "$*" >&2; }
  adm_error() { printf '[%s] [ERRO] %s\n'  "$(_ts_ip)" "$*" >&2; }
  adm_die()   { adm_error "$*"; exit 1; }
fi

ip_jobs() { nproc 2>/dev/null || echo 1; }

ip_install_root() {
  if [ -n "${ADM_INSTALL_ROOT:-}" ]; then
    printf '%s\n' "$ADM_INSTALL_ROOT"
  elif [ -n "${DESTDIR:-}" ]; then
    printf '%s\n' "$DESTDIR"
  else
    printf '/\n'
  fi
}

ip_require_root_if_needed() {
  local root="$1"
  if [ "$root" = "/" ] && [ "$(id -u)" -ne 0 ]; then
    adm_die "sys/iptables: instalar diretamente em '/' requer root."
  fi
}

ip_detect_srctree() {
  if [ -n "${ADM_IPTABLES_SRCDIR:-}" ] && [ -f "$ADM_IPTABLES_SRCDIR/configure" ]; then
    printf '%s\n' "$ADM_IPTABLES_SRCDIR"; return 0
  fi
  if [ -f "configure" ] && [ -d "iptables" ]; then
    printf '%s\n' "$PWD"; return 0
  fi
  local d
  for d in "$PWD"/iptables-* "$PWD"/*; do
    [ -d "$d" ] || continue
    if [ -f "$d/configure" ]; then
      printf '%s\n' "$d"; return 0
    fi
  done
  adm_die "sys/iptables: não foi possível detectar diretório de fonte."
}

ip_init_rules() {
  local root="$1"
  local etc="$root/etc"
  local dir="$etc/iptables"
  local rules="$dir/adm.rules"

  mkdir -p "$dir"

  if [ -f "$rules" ]; then
    local backup="${rules}.adm-backup-$(date +%Y%m%d%H%M%S)"
    adm_warn "sys/iptables: '$rules' já existe; backup em '$backup'."
    cp -f "$rules" "$backup"
    return 0
  fi

  adm_info "sys/iptables: criando regras padrão em '$rules'."
  cat >"$rules" <<'EOF'
*filter
:INPUT DROP [0:0]
:FORWARD DROP [0:0]
:OUTPUT ACCEPT [0:0]

# Permite loopback
-A INPUT -i lo -j ACCEPT
-A OUTPUT -o lo -j ACCEPT

# Permite conexões já estabelecidas
-A INPUT -m conntrack --ctstate ESTABLISHED,RELATED -j ACCEPT

# Permite pings básicos
-A INPUT -p icmp -j ACCEPT

# SSH padrão (ajuste conforme necessário)
# -A INPUT -p tcp --dport 22 -j ACCEPT

COMMIT
EOF
}

adm_hook_pre_build() {
  export ADM_SKIP_DEFAULT_BUILD=1
  adm_info "sys/iptables: build padrão desativado; usando hook."
}

adm_hook_build() {
  local src jobs
  src="$(ip_detect_srctree)"
  jobs="$(ip_jobs)"

  adm_info "sys/iptables: src=$src jobs=$jobs"

  (
    cd "$src"
    ./configure --prefix=/usr --sbindir=/usr/sbin
    make -j"$jobs"
  )
}

adm_hook_install() {
  local src root
  src="$(ip_detect_srctree)"
  root="$(ip_install_root)"

  ip_require_root_if_needed "$root"

  adm_info "sys/iptables: instalando em '$root'..."
  (
    cd "$src"
    make install DESTDIR="$root"
  )

  ip_init_rules "$root"

  adm_info "sys/iptables: instalação concluída."
}

adm_hook_post_install() {
  adm_info "sys/iptables: post-install – revise /etc/iptables/adm.rules antes de aplicar em produção."
}
