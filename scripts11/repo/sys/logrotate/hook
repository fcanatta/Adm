#!/usr/bin/env bash
# Hook para sys/logrotate
# - Não interfere no build
# - Cria /etc/logrotate.d/adm-base.conf com regras genéricas de rotação
# - Respeita ADM_INSTALL_ROOT/DESTDIR e faz backup se existir

set -euo pipefail
IFS=$'\n\t'

if ! declare -F adm_info >/dev/null 2>&1; then
  _ts_lr() { date +"%Y-%m-%d %H:%M:%S"; }
  adm_info()  { printf '[%s] [INFO] %s\n'  "$(_ts_lr)" "$*" >&2; }
  adm_warn()  { printf '[%s] [WARN] %s\n'  "$(_ts_lr)" "$*" >&2; }
  adm_error() { printf '[%s] [ERRO] %s\n'  "$(_ts_lr)" "$*" >&2; }
  adm_die()   { adm_error "$*"; exit 1; }
fi

lr_root() {
  if [ -n "${ADM_INSTALL_ROOT:-}" ]; then
    printf '%s\n' "$ADM_INSTALL_ROOT"
  elif [ -n "${DESTDIR:-}" ]; then
    printf '%s\n' "$DESTDIR"
  else
    printf '/\n'
  fi
}

lr_require_root_if_needed() {
  local root="$1"
  if [ "$root" = "/" ] && [ "$(id -u)" -ne 0 ]; then
    adm_die "sys/logrotate: instalar diretamente em '/' requer root."
  fi
}

lr_backup_if_exists() {
  local path="$1"
  if [ -e "$path" ]; then
    local backup="${path}.adm-backup-$(date +%Y%m%d%H%M%S)"
    adm_warn "sys/logrotate: '$path' já existe; backup em '$backup'."
    cp -a "$path" "$backup"
  fi
}

adm_hook_pre_build() {
  adm_info "sys/logrotate: usando build padrão; hook só configura /etc/logrotate.d."
}

adm_hook_build() { :; }

adm_hook_install() {
  local root cfgdir cfg
  root="$(lr_root)"
  lr_require_root_if_needed "$root"

  cfgdir="$root/etc/logrotate.d"
  cfg="$cfgdir/adm-base.conf"

  mkdir -p "$cfgdir"
  if [ -e "$cfg" ]; then
    adm_info "sys/logrotate: '$cfg' já existe; não sobrescrevendo."
    return 0
  fi

  adm_info "sys/logrotate: criando config base em '$cfg'."
  cat >"$cfg" <<'EOF'
/var/log/*.log {
    weekly
    rotate 4
    compress
    missingok
    notifempty
    create 0640 root adm
    sharedscripts
    postrotate
        # sinalizar syslog, se existir
        if [ -x /usr/bin/killall ] && pgrep rsyslogd >/dev/null 2>&1; then
            killall -HUP rsyslogd
        fi
    endscript
}
EOF
}

adm_hook_post_install() {
  adm_info "sys/logrotate: config base criada em /etc/logrotate.d/adm-base.conf (ou já existia)."
}
