#!/usr/bin/env bash
# Hook avançado para sys/dbus
# - Controla configure/make/make install
# - Garante diretórios de runtime/config
# - Não pisa em configs existentes

set -euo pipefail
IFS=$'\n\t'

if ! declare -F adm_info >/dev/null 2>&1; then
  _ts_db() { date +"%Y-%m-%d %H:%M:%S"; }
  adm_info()  { printf '[%s] [INFO] %s\n'  "$(_ts_db)" "$*" >&2; }
  adm_warn()  { printf '[%s] [WARN] %s\n'  "$(_ts_db)" "$*" >&2; }
  adm_error() { printf '[%s] [ERRO] %s\n'  "$(_ts_db)" "$*" >&2; }
  adm_die()   { adm_error "$*"; exit 1; }
fi

db_jobs() { nproc 2>/dev/null || echo 1; }

db_install_root() {
  if [ -n "${ADM_INSTALL_ROOT:-}" ]; then
    printf '%s\n' "$ADM_INSTALL_ROOT"
  elif [ -n "${DESTDIR:-}" ]; then
    printf '%s\n' "$DESTDIR"
  else
    printf '/\n'
  fi
}

db_require_root_if_needed() {
  local root="$1"
  if [ "$root" = "/" ] && [ "$(id -u)" -ne 0 ]; then
    adm_die "sys/dbus: instalar diretamente em '/' requer root."
  fi
}

db_detect_srctree() {
  if [ -n "${ADM_DBUS_SRCDIR:-}" ] && [ -f "$ADM_DBUS_SRCDIR/configure" ]; then
    printf '%s\n' "$ADM_DBUS_SRCDIR"; return 0
  fi
  if [ -f "configure" ] && [ -d "bus" ]; then
    printf '%s\n' "$PWD"; return 0
  fi
  local d
  for d in "$PWD"/dbus-* "$PWD"/*; do
    [ -d "$d" ] || continue
    if [ -f "$d/configure" ] && [ -d "$d/bus" ]; then
      printf '%s\n' "$d"; return 0
    fi
  done
  adm_die "sys/dbus: não foi possível detectar diretório de fonte."
}

db_init_dirs() {
  local root="$1"
  mkdir -p "$root/var/run/dbus" "$root/var/lib/dbus"

  local etc="$root/etc"
  mkdir -p "$etc/dbus-1/system.d" "$etc/dbus-1/session.d"
}

adm_hook_pre_build() {
  export ADM_SKIP_DEFAULT_BUILD=1
  adm_info "sys/dbus: build padrão desativado; usando hook."
}

adm_hook_build() {
  local src jobs
  src="$(db_detect_srctree)"
  jobs="$(db_jobs)"

  adm_info "sys/dbus: src=$src jobs=$jobs"

  (
    cd "$src"
    ./configure \
      --prefix=/usr \
      --sysconfdir=/etc \
      --localstatedir=/var \
      --enable-user-session
    make -j"$jobs"
  )
}

adm_hook_install() {
  local src root
  src="$(db_detect_srctree)"
  root="$(db_install_root)"

  db_require_root_if_needed "$root"

  adm_info "sys/dbus: instalando em '$root'..."
  (
    cd "$src"
    make install DESTDIR="$root"
  )

  db_init_dirs "$root"

  adm_info "sys/dbus: instalação concluída."
}

adm_hook_post_install() {
  adm_info "sys/dbus: post-install – configure dbus.service/elogind/desktop environment conforme necessário."
}
