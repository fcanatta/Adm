#!/usr/bin/env bash
set -Eeuo pipefail
: "${WORKDIR:?}"

cd "$WORKDIR"

srcdir="$(find . -maxdepth 1 -type d -name 'automake-*' | head -n1 || true)"
[[ -n "$srcdir" ]] || { echo "[ERR] automake: diret처rio automake-* n찾o encontrado em $WORKDIR" >&2; exit 2; }

cd "$srcdir"

if ! command -v perl >/dev/null 2>&1; then
  echo "[ERR] automake: perl n찾o encontrado no PATH (run_dep obrigat처rio)" >&2
  exit 3
fi

: "${CFLAGS:=-O2 -pipe}"
: "${LDFLAGS:=}"
export CFLAGS LDFLAGS

./configure \
  --prefix=/usr \
  --sysconfdir=/etc \
  --disable-static
