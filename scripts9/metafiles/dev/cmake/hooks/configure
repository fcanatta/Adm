#!/usr/bin/env bash
set -Eeuo pipefail
: "${WORKDIR:?}"

cd "$WORKDIR"
srcdir="$(find . -maxdepth 1 -type d -name 'cmake-*' | head -n1 || true)"
[[ -n "$srcdir" ]] || { echo "[ERR] diretório cmake-* não encontrado em $WORKDIR" >&2; exit 2; }

cd "$srcdir"

: "${CFLAGS:=-O2 -pipe}"
: "${CXXFLAGS:=-O2 -pipe}"
: "${LDFLAGS:=}"

export CFLAGS CXXFLAGS LDFLAGS

./bootstrap \
  --prefix=/usr \
  --parallel="${JOBS:-4}" \
  --system-libs \
  --no-system-jsoncpp \
  --no-qt-gui
