#!/usr/bin/env bash
set -Eeuo pipefail
: "${WORKDIR:?}"
: "${JOBS:=4}"

cd "$WORKDIR"

srcdir="$(find . -maxdepth 1 -type d -name 'libtool-*' | head -n1 || true)"
[[ -d "$srcdir" ]] || { echo "[ERR] libtool: diretório libtool-* não encontrado em $WORKDIR" >&2; exit 3; }

cd "$srcdir"

make -j"$JOBS"
