#!/usr/bin/env bash
set -Eeuo pipefail
: "${WORKDIR:?}"

cd "$WORKDIR"
srcdir="$(find . -maxdepth 1 -type d -name 'mandoc-*' | head -n1 || true)"
[[ -n "$srcdir" ]] || { echo "[ERR] mandoc: diret처rio mandoc-* n찾o encontrado em $WORKDIR" >&2; exit 2; }

cd "$srcdir"

: "${PREFIX:=/usr}"
: "${MANPATH:=/usr/share/man}"
: "${BINM_MAN:=mandoc}"  # n찾o sobrescrever man(1) do man-db por padr찾o

./configure \
  PREFIX="$PREFIX" \
  MANPATH="$MANPATH" \
  BINM_MAN="$BINM_MAN"
