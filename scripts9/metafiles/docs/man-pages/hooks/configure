#!/usr/bin/env bash
set -Eeuo pipefail
: "${WORKDIR:?}"

cd "$WORKDIR"
srcdir="$(find . -maxdepth 1 -type d -name 'man-pages-*' | head -n1 || true)"
[[ -n "$srcdir" ]] || { echo "[ERR] man-pages: diretório man-pages-* não encontrado em $WORKDIR" >&2; exit 2; }

echo "[ADM] man-pages: fontes em ${srcdir}, nenhum configure necessário."
