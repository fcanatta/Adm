#!/usr/bin/env bash
set -Eeuo pipefail
: "${WORKDIR:?}"

cd "$WORKDIR"
srcdir="$(find . -maxdepth 1 -type d -name 'man-db-*' | head -n1 || true)"
[[ -n "$srcdir" ]] || { echo "[ERR] man-db: diretório man-db-* não encontrado em $WORKDIR" >&2; exit 2; }

cd "$srcdir"

: "${CFLAGS:=-O2 -pipe}"
: "${LDFLAGS:=}"
export CFLAGS LDFLAGS

./configure \
  --prefix=/usr \
  --sysconfdir=/etc \
  --localstatedir=/var \
  --disable-setuid \
  --with-systemdtmpfilesdir=no
