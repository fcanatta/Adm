#!/usr/bin/env bash
set -Eeuo pipefail
: "${WORKDIR:?}"

src="$(find "$WORKDIR" -maxdepth 1 -type d -name 'links-*' | head -n1 || true)"
[[ -n "$src" ]] || { echo "[ERR] links: directory not found"; exit 2; }

cd "$src"

./configure \
  --prefix=/usr \
  --with-ssl \
  --enable-graphics=no \
  --enable-html5=yes
