#!/usr/bin/env bash
set -Eeuo pipefail
: "${WORKDIR:?}"

cd "$WORKDIR"
srcdir="$(find . -maxdepth 1 -type d -name 'rsync-*' | head -n1 || true)"
[[ -n "$srcdir" ]] || { echo "[ERR] rsync: diretório rsync-* não encontrado em $WORKDIR" >&2; exit 2; }

cd "$srcdir"

: "${CFLAGS:=-O2 -pipe}"
: "${LDFLAGS:=}"
export CFLAGS LDFLAGS

./configure \
  --prefix=/usr \
  --sysconfdir=/etc \
  --with-rsyncd-conf=/etc/rsyncd.conf \
  --enable-openssl \
  --disable-debug
