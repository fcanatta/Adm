#!/usr/bin/env bash
set -Eeuo pipefail
: "${WORKDIR:?}" : "${DESTDIR:?}"

cd "$WORKDIR"
srcdir="$(find . -maxdepth 1 -type d -name 'rsync-*' | head -n1 || true)"
[[ -d "$srcdir" ]] || { echo "[ERR] rsync: diretório rsync-* não encontrado em $WORKDIR" >&2; exit 3; }

cd "$srcdir"
make DESTDIR="$DESTDIR" install
