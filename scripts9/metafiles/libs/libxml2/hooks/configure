#!/usr/bin/env bash
set -Eeuo pipefail
: "${WORKDIR:?}"

cd "$WORKDIR"
srcdir="$(find . -maxdepth 1 -type d -name 'libxml2-*' | head -n1 || true)"
[[ -n "$srcdir" ]] || { echo "[ERR] libxml2: diretório libxml2-* não encontrado em $WORKDIR" >&2; exit 2; }

cd "$srcdir"

: "${CFLAGS:=-O2 -pipe}"
: "${LDFLAGS:=}"
export CFLAGS LDFLAGS

./configure \
  --prefix=/usr \
  --sysconfdir=/etc \
  --disable-static \
  --with-zlib=yes \
  --with-lzma=yes \
  --without-python
