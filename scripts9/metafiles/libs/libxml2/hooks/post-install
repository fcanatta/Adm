#!/usr/bin/env bash
set -Eeuo pipefail
: "${DESTDIR:?}"

libdir="${DESTDIR}/usr/lib"
if [[ ! -d "$libdir" ]]; then
  echo "[ERR] libxml2: ${libdir} não existe em ${DESTDIR}" >&2
  exit 4
fi

if ! find "$libdir" -maxdepth 1 -name 'libxml2.so*' 2>/dev/null | grep -q .; then
  echo "[ERR] libxml2: libxml2.so* não encontrada em ${libdir}" >&2
  exit 5
fi

echo "[OK] libxml2 instalada em ${libdir}"
