#!/usr/bin/env bash
set -Eeuo pipefail
: "${WORKDIR:?}"

cd "$WORKDIR"
srcdir="$(find . -maxdepth 1 -type d -name 'freetype-*' | head -n1 || true)"
[[ -n "$srcdir" ]] || { echo "[ERR] freetype: diretório freetype-* não encontrado em $WORKDIR" >&2; exit 2; }

cd "$srcdir"

: "${CFLAGS:=-O2 -pipe}"
: "${LDFLAGS:=}"
export CFLAGS LDFLAGS

./configure \
  --prefix=/usr \
  --disable-static \
  --enable-shared \
  --with-harfbuzz=no \
  --with-png=yes \
  --with-bzip2=yes \
  --with-zlib=yes
