#!/usr/bin/env bash
set -Eeuo pipefail
: "${WORKDIR:?}"; : "${BUILD_DIR:=${WORKDIR}/build}"
: "${DESTDIR:?}"; : "${TARGET:=$(uname -m)-unknown-linux-gnu}"
mkdir -p "$BUILD_DIR"
cd "$BUILD_DIR"
"${WORKDIR}"/binutils-*/configure \
  --target="$TARGET" \
  --prefix=/usr \
  --with-sysroot \
  --disable-nls \
  --enable-gold \
  --enable-ld=default
