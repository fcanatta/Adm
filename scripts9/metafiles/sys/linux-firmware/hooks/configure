#!/usr/bin/env bash
set -Eeuo pipefail
: "${WORKDIR:?}"

cd "$WORKDIR"

# Tenta achar diret처rio linux-firmware (git) ou linux-firmware-<vers찾o> (tarball)
srcdir="$(find "$WORKDIR" -maxdepth 1 -type d \( -name 'linux-firmware' -o -name 'linux-firmware-*' \) | head -n1 || true)"
[[ -n "$srcdir" ]] || { echo "[ERR] Diret처rio linux-firmware n찾o encontrado em $WORKDIR" >&2; exit 2; }

echo "[ADM] linux-firmware srcdir: $srcdir"
