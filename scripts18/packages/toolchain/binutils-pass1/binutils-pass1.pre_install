#!/usr/bin/env bash
set -euo pipefail

echo "[binutils-pass1.pre_install] Preparando ambiente para Binutils Pass 1..."
echo "[binutils-pass1.pre_install] LFS=${LFS:-?}"
echo "[binutils-pass1.pre_install] TERM=${TERM:-?}"

# Aqui você pode fazer validações extras, criar diretórios, etc.
# Exemplo: garantir que /sources exista (mas normalmente já existe):
if [[ ! -d "$LFS/sources" ]]; then
    echo "[binutils-pass1.pre_install] ERRO: diretório \$LFS/sources não existe."
    exit 1
fi
