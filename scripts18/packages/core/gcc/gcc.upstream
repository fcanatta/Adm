#!/usr/bin/env bash
# Helper de upstream para GCC
# Saída: versão mais recente do GCC em formato X.Y.Z
set -euo pipefail

BASE_URL="https://ftp.gnu.org/gnu/gcc/"

fallback_version() {
    # Versão atualmente usada na tua árvore
    echo "15.2.0"
    exit 0
}

fetch_index() {
    if command -v curl >/dev/null 2>&1; then
        curl -fsSL "${BASE_URL}"
    elif command -v wget >/dev/null 2>&1; then
        wget -qO- "${BASE_URL}"
    else
        fallback_version
    fi
}

main() {
    local html version

    html="$(fetch_index)"

    # Diretórios do tipo gcc-X.Y.Z/
    version="$(
        printf '%s\n' "$html" \
        | grep -Eo 'gcc-[0-9]+\.[0-9]+\.[0-9]+/' \
        | sed 's#gcc-##; s#/##' \
        | sort -V \
        | tail -n1
    )"

    if [[ -n "${version}" ]]; then
        printf '%s\n' "${version}"
    else
        fallback_version
    fi
}

main "$@"
