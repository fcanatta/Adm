# Diretório dos profiles $LFS/profiles/cross-pass1.env
# ============================================================
# Perfil: cross-pass1
# Fase: Toolchain inicial (Binutils Pass 1, GCC Pass 1, M4, Ncurses, etc.)
# Libc: nenhuma ainda (apenas toolchain temporário)
# ============================================================

# Estágio / libc (para scripts de build que quiserem diferenciar)
export ADM_STAGE="pass1"
export ADM_LIBC="none"

# Alvo do toolchain LFS (como no livro)
export LFS_TGT="${LFS_TGT:-$(uname -m)-lfs-linux-gnu}"

# Triplet exposto num nome neutro que os scripts podem usar
export ADM_TGT="$LFS_TGT"

# Sysroot do alvo (árvore root do LFS)
export ADM_SYSROOT="$LFS"

# Prefix dos binários dessa fase (LFS/tools)
export ADM_PREFIX="$LFS/tools"

# PATH: prioriza ferramentas do LFS/tools
# (não faz chroot nessa fase)
export PATH="$LFS/tools/bin:/usr/bin:/bin"

# Nessa fase NÃO queremos chroot automático
export CHROOT_FOR_BUILDS=0
