# ============================================================
# Perfil: musl-final
# Fase: Sistema final baseado em musl (libc principal)
# ============================================================

export ADM_STAGE="final"
export ADM_LIBC="musl"

# Triplet musl padrão (ex.: x86_64-linux-musl)
export ADM_TGT="${ADM_TGT:-$(uname -m)-linux-musl}"

# Sysroot: raiz do sistema musl (dentro do chroot)
export ADM_SYSROOT="/"

# Prefixo padrão de programas do sistema musl
export ADM_PREFIX="/usr"

# PATH padrão
export PATH="/usr/bin:/usr/sbin:/bin:/sbin"

# Para builds finais (musl-native) também queremos chroot
export CHROOT_FOR_BUILDS=1
