# ============================================================
# Perfil: cross-pass2
# Fase: Toolchain ajustado (Binutils Pass 2, GCC Pass 2, Libstdc++ cross, etc.)
# Libc: ainda não é a final do sistema (usa headers temporários)
# ============================================================

export ADM_STAGE="pass2"
export ADM_LIBC="none"

# Mesmo triplet do LFS
export LFS_TGT="${LFS_TGT:-$(uname -m)-lfs-linux-gnu}"
export ADM_TGT="$LFS_TGT"

# Continua usando o sysroot do LFS
export ADM_SYSROOT="$LFS"

# Continua instalando em LFS/tools
export ADM_PREFIX="$LFS/tools"

# PATH continua priorizando o toolchain em LFS/tools
export PATH="$LFS/tools/bin:/usr/bin:/bin"

# Ainda sem chroot
export CHROOT_FOR_BUILDS=0
