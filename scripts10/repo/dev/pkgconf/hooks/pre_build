#!/usr/bin/env bash
# hook: pre_build para pkgconf

set -eu

: "${ADM_INSTALL_ROOT:=/}"
: "${ADM_BUILD_SRC_DIR:?}"
: "${ADM_BUILD_BUILD_DIR:?}"

mkdir -p "${ADM_BUILD_BUILD_DIR}"

# Instala em /usr
export ADM_BUILD_PREFIX="${ADM_INSTALL_ROOT}/usr"

# Deixa o detect/build cuidar do configure;
# aqui só passamos opções básicas de autotools.
export ADM_BUILD_CONFIGURE_EXTRA="
  --prefix=/usr
  --sysconfdir=/etc
  --disable-static
"

export CFLAGS="${CFLAGS:--O2 -pipe}"
export CXXFLAGS="${CXXFLAGS:--O2 -pipe}"
