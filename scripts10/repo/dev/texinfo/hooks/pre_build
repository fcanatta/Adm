#!/usr/bin/env bash
# hook: pre_build para texinfo (stage temporário em chroot)

set -eu

: "${ADM_INSTALL_ROOT:=/}"
: "${ADM_BUILD_SRC_DIR:?}"
: "${ADM_BUILD_BUILD_DIR:?}"

mkdir -p "$ADM_BUILD_BUILD_DIR"

export ADM_BUILD_PREFIX="${ADM_INSTALL_ROOT}/usr"

# Versão 7.2 (metafile)
export ADM_BUILD_CONFIGURE_EXTRA="
  --disable-static
  --enable-shared
  --docdir=/usr/share/doc/texinfo-7.2
"

export CFLAGS="${CFLAGS:--O2 -pipe}"
export CXXFLAGS="${CXXFLAGS:--O2 -pipe}"
