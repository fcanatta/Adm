#!/usr/bin/env bash
# hook: pre_build para m4
# Ajusta prefix e flags, o resto o build.sh/detect.sh cuidam.

set -eu

: "${ADM_INSTALL_ROOT:=/}"
: "${ADM_BUILD_SRC_DIR:?}"
: "${ADM_BUILD_BUILD_DIR:?}"

mkdir -p "$ADM_BUILD_BUILD_DIR"

# m4 vai em /usr dentro do root (host ou chroot)
export ADM_BUILD_PREFIX="${ADM_INSTALL_ROOT}/usr"

export ADM_BUILD_CONFIGURE_EXTRA="
  --disable-static
  --enable-shared
  --docdir=/usr/share/doc/m4-1.4.20
"

export CFLAGS="${CFLAGS:--O2 -pipe}"
export CXXFLAGS="${CXXFLAGS:--O2 -pipe}"
