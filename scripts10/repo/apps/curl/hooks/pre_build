#!/usr/bin/env bash
# hook: pre_build para curl
# Ativa OpenSSL, zlib, e deixa o resto pro detect/build.

set -eu

: "${ADM_INSTALL_ROOT:=/}"
: "${ADM_BUILD_SRC_DIR:?}"
: "${ADM_BUILD_BUILD_DIR:?}"

mkdir -p "$ADM_BUILD_BUILD_DIR"

export ADM_BUILD_PREFIX="${ADM_INSTALL_ROOT}/usr"

export ADM_BUILD_CONFIGURE_EXTRA="
  --with-ssl=openssl
  --with-zlib
  --enable-shared
  --disable-static
  --mandir=/usr/share/man
  --docdir=/usr/share/doc/curl-8.17.0
"

export CFLAGS="${CFLAGS:--O2 -pipe}"
export CXXFLAGS="${CXXFLAGS:--O2 -pipe}"
