#!/usr/bin/env bash
# hook: pre_build para zstd

set -eu

: "${ADM_INSTALL_ROOT:=/}"
: "${ADM_BUILD_SRC_DIR:?}"
: "${ADM_BUILD_BUILD_DIR:?}"

mkdir -p "$ADM_BUILD_BUILD_DIR"

export ADM_BUILD_PREFIX="${ADM_INSTALL_ROOT}/usr"

# zstd tem Makefile/CMake; detect.sh escolhe.
export ADM_BUILD_CONFIGURE_EXTRA="
  -DCMAKE_INSTALL_PREFIX=/usr
  -DZSTD_BUILD_SHARED=ON
  -DZSTD_BUILD_STATIC=OFF
"

export CFLAGS="${CFLAGS:--O2 -pipe}"
export CXXFLAGS="${CXXFLAGS:--O2 -pipe}"
