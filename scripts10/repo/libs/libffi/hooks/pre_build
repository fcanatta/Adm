#!/usr/bin/env bash
# hook: pre_build para libffi

set -eu

: "${ADM_INSTALL_ROOT:=/}"
: "${ADM_BUILD_SRC_DIR:?}"
: "${ADM_BUILD_BUILD_DIR:?}"

mkdir -p "${ADM_BUILD_BUILD_DIR}"
cd "${ADM_BUILD_BUILD_DIR}"

export ADM_BUILD_PREFIX="${ADM_INSTALL_ROOT}/usr"

../configure \
  --prefix=/usr \
  --sysconfdir=/etc \
  --disable-static || {
    echo "[libffi] configure falhou" >&2
    exit 1
  }

export ADM_BUILD_CONFIGURE_EXTRA=""
export CFLAGS="${CFLAGS:--O2 -pipe}"
export CXXFLAGS="${CXXFLAGS:--O2 -pipe}"
