#!/usr/bin/env bash
# hook: post_install para kernel-tkg

set -eu

: "${ADM_ROOT:=/usr/src/adm}"

MKINIT="${ADM_ROOT}/mkinitramfs.sh"

echo "[kernel-tkg/post_install] Chamando mkinitramfs.sh..."

if [ -x "${MKINIT}" ]; then
    "${MKINIT}" || echo "[kernel-tkg/post_install] mkinitramfs.sh retornou erro." >&2
elif command -v mkinitramfs-adm >/dev/null 2>&1; then
    mkinitramfs-adm || echo "[kernel-tkg/post_install] mkinitramfs-adm retornou erro." >&2
else
    echo "[kernel-tkg/post_install] mkinitramfs nÃ£o encontrado, ignorando." >&2
fi
