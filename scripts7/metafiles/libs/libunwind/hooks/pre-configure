#!/usr/bin/env bash
set -euo pipefail
: "${WORKDIR:?}"
: "${TARGET:?TARGET não definido}"
: "${SYSROOT:?SYSROOT não definido}"
: "${CONFIGURE_EXTRAS:=}"

BUILD_DIR="${WORKDIR}/build-libunwind"
mkdir -p "$BUILD_DIR"
export ADM_OUT_OF_TREE_BUILD="$BUILD_DIR"

cat > "${BUILD_DIR}/CMAKE_ARGS.txt" <<EOF
-DCMAKE_INSTALL_PREFIX=/usr
-DCMAKE_BUILD_TYPE=Release
-DCMAKE_SYSROOT=${SYSROOT}
-DCMAKE_C_COMPILER=clang
-DCMAKE_C_COMPILER_TARGET=${TARGET}
-DCMAKE_CXX_COMPILER=clang++
-DCMAKE_CXX_COMPILER_TARGET=${TARGET}
-DLIBUNWIND_ENABLE_SHARED=ON
-DLIBUNWIND_ENABLE_STATIC=ON
-DLIBUNWIND_USE_COMPILER_RT=ON
-DCMAKE_SKIP_RPATH=ON
-GNinja
EOF

export CONFIGURE_EXTRAS+=" -S libunwind -B ${BUILD_DIR} $(tr '\n' ' ' < ${BUILD_DIR}/CMAKE_ARGS.txt)"
