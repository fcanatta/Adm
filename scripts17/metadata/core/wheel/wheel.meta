# Wheel-0.46.1 — LFS 12.4, Capítulo 8.54

PKG_NAME="wheel"
PKG_VERSION="0.46.1"
PKG_RELEASE=1

PKG_DESCRIPTION="Wheel is the reference implementation of the Python wheel packaging standard."

PKG_HOMEPAGE="https://pypi.org/project/wheel/"
PKG_SOURCE_URLS=(
    "https://pypi.org/packages/source/w/wheel/wheel-${PKG_VERSION}.tar.gz"
)

PKG_MD5S=(
    "65e09ee84af36821e3b1e9564aa91bd5"
)

PKG_DEPENDS=("python" "flit-core" "packaging")
PKG_GROUPS=()

PKG_UPSTREAM_URL="https://pypi.org/simple/wheel/"
PKG_UPSTREAM_REGEX='wheel-([0-9.]+)\.tar\.gz'


PKG_BUILD() {
    # LFS: pip3 wheel -w dist --no-cache-dir --no-build-isolation --no-deps $PWD
    pip3 wheel -w dist --no-cache-dir --no-build-isolation --no-deps "$PWD"
}

PKG_INSTALL() {
    # LFS: pip3 install --no-index --find-links dist wheel
    # Adaptado para DESTDIR:
    pip3 install \
        --no-index \
        --no-user \
        --find-links dist \
        --root "${DESTDIR}" \
        --prefix /usr \
        wheel
}
