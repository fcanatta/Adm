# $META_DIR/mpc.meta
PKG_NAME="mpc"
PKG_VERSION="1.3.1"
PKG_RELEASE=1

PKG_GROUPS=( "core" )

PKG_SOURCE_URLS=(
  "https://ftp.gnu.org/gnu/mpc/mpc-${PKG_VERSION}.tar.gz"
)

PKG_SHA256S=(
  "ab642492f5cf882b74aa0cb730cd410a81edcdbec895183ce930e706c1c759b8"
)

PKG_MD5S=(
  "5c9bc658c9fd0f940e8e3e0f09530c62"
)

PKG_DEPENDS=(
  "gmp"
  "mpfr"
)

PKG_BUILD() {
    set -e

    ./configure --prefix=/usr    \
                --disable-static \
                --docdir=/usr/share/doc/mpc-${PKG_VERSION}

    make
    make html

    make check || {
        echo "WARN: testes do MPC falharam, verifique logs"
    }
}

PKG_INSTALL() {
    set -e
    make DESTDIR="$DESTDIR" install
    make DESTDIR="$DESTDIR" install-html
}

PKG_UPSTREAM_URL="https://ftp.gnu.org/gnu/mpc/"
PKG_UPSTREAM_REGEX="mpc-([0-9.]+)\\.tar\\.gz"
