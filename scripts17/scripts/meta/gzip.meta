# Gzip-1.14 - LFS 6.11
# --------------------
# Variáveis: GZIP_VER, LFS, LFS_TGT

PKG_NAME="gzip"

PKG_BUILD() {
    set -e

    : "${GZIP_VER:?GZIP_VER não definido}"
    : "${LFS:?LFS não definido}"
    : "${LFS_TGT:?LFS_TGT não definido}"

    cd "$LFS/sources"

    [[ -f "gzip-${GZIP_VER}.tar.xz" ]] || [[ -f "gzip-${GZIP_VER}.tar.gz" ]] || {
        echo "ERRO: gzip-${GZIP_VER}.tar.[xz|gz] não encontrado em $LFS/sources" >&2
        exit 1
    }

    tar -xf "gzip-${GZIP_VER}.tar."*
    cd "gzip-${GZIP_VER}"

    ./configure --prefix=/usr --host="$LFS_TGT"

    make
    make DESTDIR="$LFS" install

    cd "$LFS/sources"
    rm -rf "gzip-${GZIP_VER}"
}

#######################################################
# Checagem genérica
#######################################################

PKG_MAIN_BINS=(
  "/usr/bin/gzip"
)

PKG_CHECK_BINS=(
  "/usr/bin/gunzip"
  "/usr/bin/zcat"
)

PKG_CHECK_CMDS=(
  "$LFS/usr/bin/gzip --version"
)
