# Grep-3.12 - LFS 6.10
# --------------------
# Variáveis: GREP_VER, LFS, LFS_TGT

PKG_NAME="grep"

PKG_BUILD() {
    set -e

    : "${GREP_VER:?GREP_VER não definido}"
    : "${LFS:?LFS não definido}"
    : "${LFS_TGT:?LFS_TGT não definido}"

    cd "$LFS/sources"

    [[ -f "grep-${GREP_VER}.tar.xz" ]] || [[ -f "grep-${GREP_VER}.tar.gz" ]] || {
        echo "ERRO: grep-${GREP_VER}.tar.[xz|gz] não encontrado em $LFS/sources" >&2
        exit 1
    }

    tar -xf "grep-${GREP_VER}.tar."*
    cd "grep-${GREP_VER}"

    ./configure --prefix=/usr   \
                --host="$LFS_TGT" \
                --build="$(./build-aux/config.guess)"

    make
    make DESTDIR="$LFS" install

    cd "$LFS/sources"
    rm -rf "grep-${GREP_VER}"
}

#######################################################
# Checagem genérica
#######################################################

PKG_MAIN_BINS=(
  "/usr/bin/grep"
)

PKG_CHECK_BINS=(
  "/usr/bin/egrep"
  "/usr/bin/fgrep"
)

PKG_CHECK_CMDS=(
  "$LFS/usr/bin/grep --version"
)
