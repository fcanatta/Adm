# Diffutils-3.12 - LFS 6.6
# ------------------------
# Variáveis: DIFFUTILS_VER, LFS, LFS_TGT

PKG_NAME="diffutils"

PKG_BUILD() {
    set -e

    : "${DIFFUTILS_VER:?DIFFUTILS_VER não definido}"
    : "${LFS:?LFS não definido}"
    : "${LFS_TGT:?LFS_TGT não definido}"

    cd "$LFS/sources"

    [[ -f "diffutils-${DIFFUTILS_VER}.tar.xz" ]] || [[ -f "diffutils-${DIFFUTILS_VER}.tar.gz" ]] || {
        echo "ERRO: diffutils-${DIFFUTILS_VER}.tar.[xz|gz] não encontrado em $LFS/sources" >&2
        exit 1
    }

    tar -xf "diffutils-${DIFFUTILS_VER}.tar."*
    cd "diffutils-${DIFFUTILS_VER}"

    ./configure --prefix=/usr   \
                --host="$LFS_TGT" \
                gl_cv_func_strcasecmp_works=y \
                --build="$(./build-aux/config.guess)"

    make
    make DESTDIR="$LFS" install

    cd "$LFS/sources"
    rm -rf "diffutils-${DIFFUTILS_VER}"
}

#######################################################
# Checagem genérica
#######################################################

PKG_MAIN_BINS=(
  "/usr/bin/diff"
)

PKG_CHECK_BINS=(
  "/usr/bin/cmp"
)

PKG_CHECK_CMDS=(
  "$LFS/usr/bin/diff --version"
)
