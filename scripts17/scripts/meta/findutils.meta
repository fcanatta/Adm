# Findutils-4.10.0 - LFS 6.8
# --------------------------
# Variáveis: FINDUTILS_VER, LFS, LFS_TGT

PKG_NAME="findutils"

PKG_BUILD() {
    set -e

    : "${FINDUTILS_VER:?FINDUTILS_VER não definido}"
    : "${LFS:?LFS não definido}"
    : "${LFS_TGT:?LFS_TGT não definido}"

    cd "$LFS/sources"

    [[ -f "findutils-${FINDUTILS_VER}.tar.xz" ]] || [[ -f "findutils-${FINDUTILS_VER}.tar.gz" ]] || {
        echo "ERRO: findutils-${FINDUTILS_VER}.tar.[xz|gz] não encontrado em $LFS/sources" >&2
        exit 1
    }

    tar -xf "findutils-${FINDUTILS_VER}.tar."*
    cd "findutils-${FINDUTILS_VER}"

    ./configure --prefix=/usr                   \
                --localstatedir=/var/lib/locate \
                --host="$LFS_TGT"               \
                --build="$(build-aux/config.guess)"

    make
    make DESTDIR="$LFS" install

    cd "$LFS/sources"
    rm -rf "findutils-${FINDUTILS_VER}"
}

#######################################################
# Checagem genérica
#######################################################

PKG_MAIN_BINS=(
  "/usr/bin/find"
)

PKG_CHECK_BINS=(
  "/usr/bin/xargs"
  "/usr/bin/locate"
)

PKG_CHECK_DIRS=(
  "/var/lib/locate"
)

PKG_CHECK_CMDS=(
  "$LFS/usr/bin/find --version"
)
