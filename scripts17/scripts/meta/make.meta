# Make-4.4.1 - LFS 6.12
# ---------------------
# Variáveis: MAKE_VER, LFS, LFS_TGT

PKG_NAME="make"

PKG_BUILD() {
    set -e

    : "${MAKE_VER:?MAKE_VER não definido}"
    : "${LFS:?LFS não definido}"
    : "${LFS_TGT:?LFS_TGT não definido}"

    cd "$LFS/sources"

    [[ -f "make-${MAKE_VER}.tar.xz" ]] || [[ -f "make-${MAKE_VER}.tar.gz" ]] || {
        echo "ERRO: make-${MAKE_VER}.tar.[xz|gz] não encontrado em $LFS/sources" >&2
        exit 1
    }

    tar -xf "make-${MAKE_VER}.tar."*
    cd "make-${MAKE_VER}"

    ./configure --prefix=/usr   \
                --host="$LFS_TGT" \
                --build="$(build-aux/config.guess)"

    make
    make DESTDIR="$LFS" install

    cd "$LFS/sources"
    rm -rf "make-${MAKE_VER}"
}

#######################################################
# Checagem genérica
#######################################################

PKG_MAIN_BINS=(
  "/usr/bin/make"
)

PKG_CHECK_CMDS=(
  "$LFS/usr/bin/make --version"
)
