# Make-4.4.1 - LFS 6.12
PKG_NAME="make"

PKG_BUILD() {
    set -e

    : "${MAKE_VER:?MAKE_VER n達o definido}"
    : "${LFS:?LFS n達o definido}"
    : "${LFS_TGT:?LFS_TGT n達o definido}"

    cd "$LFS/sources"

    [[ -f "make-${MAKE_VER}.tar.xz" ]] || [[ -f "make-${MAKE_VER}.tar.gz" ]] || {
        echo "ERRO: make-${MAKE_VER}.tar.[xz|gz] n達o encontrado em $LFS/sources" >&2
        exit 1
    }

    tar -xf "make-${MAKE_VER}.tar."*
    cd "make-${MAKE_VER}"

    ./configure --prefix=/usr   \
                --host="$LFS_TGT" \
                --build="$(build-aux/config.guess)"

    make
    make DESTDIR="$LFS" install

    cd "$LFS/sources"
    rm -rf "make-${MAKE_VER}"
}

PKG_CHECK() {
    [[ -x "$LFS/usr/bin/make" ]]
}
